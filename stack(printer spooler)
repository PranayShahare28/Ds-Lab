#include <iostream> 
#include <string> 
#define SIZE 10 
using namespace std; 
class printer { 
    string jobs[SIZE]; 
    int size; 
    int front, rear; 
 
public: 
    printer() { 
        size = SIZE; 
        front = -1; 
        rear = -1; 
    } 
    void input(string jobname) {  
        if ((rear + 1) % size == front) { 
            cout << "Spooler is full\n"; 
            return; 
        } 
        if (front == -1) { 
            front = rear = 0; 
        } else { 
            rear = (rear + 1) % size; 
        } 
        jobs[rear] = jobname; 
        cout << "Job Name := " << jobname << "\n"; 
    } 
    void processjob() { 
        if (front == -1) { 
            cout << "Spooler is empty\n"; 
            return; 
        } 
        cout << "Processing print job: " << jobs[front] << "\n"; 
        if (front == rear) { 
            front = rear = -1; 
        } else { 
            front = (front + 1) % size; 
        } 
    } 
    void display() {    
        if (front == -1) { 
            cout << "Spooler is empty\n"; 
            return; 
        } 
        cout << "Current print queue: "; 
        int i = front; 
        while (true) { 
            cout << jobs[i]; 
            if (i == rear) 
                break; 
            cout << " -> "; 
            i = (i + 1) % size; 
        } 
        cout << "\n"; 
    } 
}; 
int main() { 
    printer myPrinter; 
    int choice; 
    string jobname; 
    do { 
        cout << "\n1. Input Print job\n"; 
        cout << "2. Process print job\n"; 
        cout << "3. Display all print jobs\n"; 
        cout << "4. Exit\n"; 
        cout << "Choose an option: "; 
        cin >> choice; 
        switch (choice) { 
            case 1: 
                cout << "Enter print job name: "; 
                cin >> jobname; 
                myPrinter.input(jobname); 
                break; 
            case 2: 
                myPrinter.processjob(); 
                break; 
            case 3: 
                myPrinter.display(); 
                break; 
            case 4: 
                cout << "Exiting... Thank you!\n"; 
                break; 
            default: 
                cout << "Invalid option. Try again.\n"; 
        } 
    } while (choice != 4); 
 
    return 0; 
}
